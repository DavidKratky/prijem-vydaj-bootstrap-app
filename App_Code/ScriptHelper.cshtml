@helper mojScript(IEnumerable<dynamic> data, String typ, String id){
   
   var label = "";
   if("prijem".Equals(typ)){
       label = "Príjem";
   } else {
       label = "Výdaj";
   }

   
    <text>
     var ctx@(id) = document.getElementById("@id").getContext('2d');
    var myChart@(id) = new Chart(ctx@(id), {
        type: 'bar',
        data: {
            labels:[
                @foreach(var d in data){
                    <text>'@(d.datum.ToString("dd.MM.yyyy"))',</text>
                }
            ],
            datasets: [{
                label: ["@Html.Raw(label)"],
                data: [@foreach(var d in data){<text>@(d.cena),</text>}],
                backgroundColor: [
                    @foreach(var d in data){
                        if(typ.Equals("vydaj")){
                            <text>'rgba(192, 57, 43,0.2)',</text>
                        }else{
                            <text>'rgba(39, 174, 96, 0.2)',</text>
                        }
                        
                    }                
                ],
                borderColor: [
                    @foreach(var d in data){
                        if(typ.Equals("vydaj")){
                            <text>'rgba(192, 57, 43,1.0)',</text>
                        }else{
                            <text>'rgba(39, 174, 96, 1.0)',</text>
                        }
                    } 
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
    </text>
}